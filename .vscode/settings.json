{
  "terminal.integrated.env.osx": {
    "PYTHONPATH": "${workspaceFolder}/src/simulator"
  },
  "jupyter.notebookFileRoot": "${workspaceFolder}",
  "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python3",
  "files.exclude": {
    "**/__pycache__": true,
    "**/.idea": true,
    "**/.ipynb_checkpoints": true
  },
  "python.autoComplete.extraPaths": ["${workspaceFolder}/src/simulator"],
  "python.formatting.provider": "black",
  "python.analysis.typeCheckingMode": "strict",
  "python.analysis.extraPaths": ["${workspaceFolder}/src/simulator"],
  "python.analysis.autoImportCompletions": true,
  "python.analysis.completeFunctionParens": true,
  "python.analysis.diagnosticMode": "workspace",
  "python.analysis.exclude": [".venv", "poc"], // remove permanent errors in python fls
  "python.analysis.ignore": [".venv", "poc"], // remove errors on edit in python files
  "python.testing.pytestArgs": ["tests"],
  "python.testing.unittestEnabled": false,
  "python.testing.pytestEnabled": true,
  "testExplorer.addToEditorContextMenu": true,
  "pythonTestExplorer.testFramework": "pytest",
  "testing.alwaysRevealTestOnStateChange": true,
  "testing.automaticallyOpenPeekViewDuringAutoRun": false,
  "testExplorer.codeLens": false,
  "testExplorer.errorDecoration": false,
  "testExplorer.gutterDecoration": true,
  "testExplorer.hideEmptyLog": true,
  "testing.gutterEnabled": true,
  "testing.followRunningTest": true,
  "testing.saveBeforeTest": false,
  "testExplorer.useNativeTesting": false,
  "python.testing.autoTestDiscoverOnSaveEnabled": true,
  "testing.automaticallyOpenPeekView": "never",
  "editor.rulers": [80, 88],
  "files.autoSave": "afterDelay"
}
